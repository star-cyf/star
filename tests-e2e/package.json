{
  "name": "star-tests",
  "version": "1.0.0",
  "description": "star-tests",
  "main": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "npm-run-all --print-label database:migration --parallel server client test",
    "database:migration": "cross-env NODE_ENV=test npm --prefix ../server run database:migration",
    "server": "cross-env NODE_ENV=test npm --prefix ../server run dev",
    "client": "npm --prefix ../client run dev",
    "test": "wait-port 3000 && wait-port 4000 && npx playwright test --workers=1 && npm run cleanup",
    "test:headed": "npx playwright test --headed",
    "test:interactive": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug",
    "cleanup": "ts-node cleanup.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.1",
    "@types/node": "^20.10.4",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "npm-run-all": "^4.1.5",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "wait-port": "^1.1.0"
  }
}
